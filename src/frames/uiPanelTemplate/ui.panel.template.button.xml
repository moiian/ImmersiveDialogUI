<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <!-- Textures  -->
    <Texture name="DUIPanelButtonUpTexture" file="Interface\AddOns\ImmersiveDialogUI\src\assets\art\parchment\OptionBackground-Common" virtual="true">
    </Texture>
    <Texture name="DUIPanelButtonDownTexture" file="Interface\AddOns\ImmersiveDialogUI\src\assets\art\parchment\ButtonHighlight-Gossip" virtual="true">
    </Texture>
    <Texture name="DUIPanelButtonDisabledTexture" file="Interface\AddOns\ImmersiveDialogUI\src\assets\art\parchment\OptionBackground-Grey"  virtual="true">
    </Texture>
    <Texture name="DUIPanelButtonDisabledDownTexture" file="Interface\AddOns\ImmersiveDialogUI\src\assets\art\parchment\OptionBackground-Grey"  virtual="true">
    </Texture>
    <Texture name="DUIPanelButtonHighlightTexture" file="Interface\AddOns\ImmersiveDialogUI\src\assets\art\parchment\ButtonHighlight-Gossip" alphaMode="ADD" virtual="true">
    </Texture>
    <!-- Textures End -->
<!-- 定义一个高亮用的黄色字体 -->
	<Font name="DGameFontHighlightYellow" inherits="DGameFontHighlight">
		<Color r="1" g="0.8" b="0"/>
	</Font>

	<!-- 按钮模板 -->
	<Button name="DUIPanelButtonTemplate" virtual="true">
		<ButtonText name="$parentText" justifyH="LEFT">
		</ButtonText>
		<NormalFont inherits="DGameFontNormal"/>
		<HighlightFont inherits="DGameFontHighlightYellow"/> <!-- 这里改成新字体 -->
		<DisabledFont inherits="DGameFontDisable"/>
		<NormalTexture inherits="DUIPanelButtonUpTexture"/>
		<DisabledTexture inherits="DUIPanelButtonDisabledTexture"/>
		<HighlightTexture inherits="DUIPanelButtonHighlightTexture"/>
	</Button>
</Ui>